            .problem-icon-wrapper .problem-icon {
                width: 30px;
                height: 30px;
            }
            
            .problem-card-title {
                font-size: 20px;
            }
            
            .problem-main-stat {
                font-size: 28px;
            }
            
            .problem-stat-label {
                font-size: 14px;
            }
            
            .problem-details-list li {
                font-size: 13px;
                padding: 10px 15px;
            }
            
            .section-title {
                font-size: 32px;
            }
            
            .section-subtitle {
                font-size: 16px;
            }
            
            .service-row {
                padding: 20px;
                margin-bottom: 30px;
            }
            
            .service-icon-large {
                width: 100px;
                height: 100px;
                font-size: 48px;
            }
            
            .service-content h3 {
                font-size: 20px;
            }
            
            .service-content p {
                font-size: 14px;
            }
            
